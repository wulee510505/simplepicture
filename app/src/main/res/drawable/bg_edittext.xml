<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 描边 -->
            <stroke android:width="1px" android:color="@color/tv_color_3" />

            <!-- 圆角 -->
            <corners android:bottomLeftRadius="2dip" android:bottomRightRadius="2dip" android:topLeftRadius="2dip" android:topRightRadius="2dip" />

            <solid android:color="@color/white"/>

            <padding
                android:top="@dimen/dp_8"
                android:bottom="@dimen/dp_8"
                android:left="@dimen/dp_5"
                android:right="@dimen/dp_5"/>

        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- 描边 -->
            <stroke android:width="1px" android:color="@color/tv_color_3" />

            <!-- 圆角 -->
            <corners android:bottomLeftRadius="2dip" android:bottomRightRadius="2dip" android:topLeftRadius="2dip" android:topRightRadius="2dip" />

            <solid android:color="@color/white"/>

            <padding
                android:top="@dimen/dp_8"
                android:bottom="@dimen/dp_8"
                android:left="@dimen/dp_5"
                android:right="@dimen/dp_5"/>
        </shape>
    </item>

</selector>