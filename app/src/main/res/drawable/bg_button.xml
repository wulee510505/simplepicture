<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"> <!-- pressed the button status -->
        <shape>
            <!-- //渐变方向     按钮边缘="" 边缘宽="" -->
            <stroke android:width="1px" android:color="#fad3cf" />
            <!-- //边缘颜色   按钮四个圆角="" -->
            <corners android:radius="4dp" />
            <!-- //半径    内边距="" 按钮文字和边缘距离="" -->
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />

            <solid android:color="#2c96f0" />
        </shape>
    </item>
    <item android:state_focused="false"> <!-- get the focus button sttaus -->
        <shape>

            <stroke android:width="1px" android:color="#dcdcdc" />

            <corners android:radius="4dp" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />

            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item> <!-- no focus the button status(the normal status button) -->
        <shape>

            <stroke android:width="1px" android:color="#fad3cf" />

            <corners android:radius="4dp" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />

            <solid android:color="@color/colorAccent" />
        </shape>
    </item>

</selector>
